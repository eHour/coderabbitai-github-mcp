# GitHub Authentication (Required)
GITHUB_TOKEN=ghp_your_github_personal_access_token

# GitHub Repository (Optional - can be passed via CLI)
GITHUB_OWNER=your-org
GITHUB_REPO=your-repo

# LLM Configuration (Optional - for intelligent validation)
# Choose one:
OPENAI_API_KEY=sk-your-openai-api-key
# OR
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FILE=coderabbit-mcp.log  # Optional: log to file

# Runtime Configuration
DRY_RUN=false
MAX_ITERATIONS=3
MAX_ANALYZERS=5

# CI/CD Configuration
CI_WAIT_TIMEOUT=600000  # 10 minutes
CI_CHECK_INTERVAL=10000  # 10 seconds