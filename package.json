{
  "name": "mcp-coderabbit",
  "version": "1.0.0",
  "description": "MCP server for automating CodeRabbit PR review resolution with parallel agent architecture",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "mcp-coderabbit": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "cli": "tsx src/cli.ts",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "keywords": [
    "mcp",
    "coderabbit",
    "github",
    "pr-review",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@octokit/graphql": "^9.0.1",
    "@octokit/rest": "^21.0.0",
    "@types/uuid": "^10.0.0",
    "async-mutex": "^0.4.0",
    "commander": "^12.0.0",
    "diff": "^5.1.0",
    "dotenv": "^16.3.1",
    "eventemitter3": "^5.0.1",
    "p-queue": "^7.4.1",
    "picomatch": "^4.0.3",
    "simple-git": "^3.22.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/diff": "^5.0.8",
    "@types/node": "^20.11.0",
    "@types/picomatch": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
